\iftwl@crowdmark
	\newenvironment{problem}{%
		\begin{list}
		{\Large\textbf{\theprobl}\hfill}
		{\usecounter{probl}%
			\let\my@olditem\item%
			\newcommand{\Item}{\pagebreak\my@olditem}%
			\renewcommand{\ii}{\Item}%
			\rightmargin=0mm\leftmargin=1.25em%
			\labelwidth=2.25em\labelsep=.75em%
	} }{\end{list}}

	\newenvironment{subproblem}{%
		\begin{list}
		{\textbf{\theprobll}\;}
		{\usecounter{probll}%
	} }{\end{list}}
\else
	\newenvironment{problem}{%
		\begin{list}
		{\Large\textbf{\theprobl}\hfill}
		{\usecounter{probl}%
			\rightmargin=0mm\leftmargin=1.25em%
			\labelwidth=2.25em\labelsep=.75em\itemsep=8ex%
	} }{\end{list}}

	\newenvironment{subproblem}{%
		\begin{list}
		{\textbf{\theprobll}\;}
		{\usecounter{probll}%
			\let\my@olditem\item
			\let\my@closepage\relax
			\newcommand{\Item}{%
				\my@closepage\my@olditem\minipage[t]{\linewidth}%
				\let\my@closepage\endminipage%
			}
			\renewcommand{\ii}{\Item}
			\let\my@oldpagebreak\pagebreak
			\renewcommand{\pagebreak}{\my@closepage\my@oldpagebreak}
		\itemsep=1.5ex%
	} }{\my@closepage\end{list}\medbreak}
\fi


