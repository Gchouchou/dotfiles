\newenvironment{problem}{%
    \begin{list}
    {\Large\textbf{\theprobl}\hfill}
    {\usecounter{probl}%
        \rightmargin=0pt\leftmargin=16pt%
        \labelwidth=24pt\labelsep=6pt\itemsep=2ex%
} }{\end{list}\medbreak}

\newenvironment{problems}{%
    \begin{list}
    {\Large\textbf{\theprobll}\hfill}
    {\usecounter{probll}%
        \let\my@olditem\item
        \let\my@closepage\relax
        \newcommand{\Item}{%
            \my@closepage\pagebreak\my@olditem\minipage[t]{\linewidth}%
            \let\my@closepage\endminipage%
        }
        \renewcommand{\ii}{\Item}
        \rightmargin=0pt\leftmargin=16pt%
        \labelwidth=24pt\labelsep=6pt\itemsep=2ex%
} }{\my@closepage\end{list}\medbreak}

\newenvironment{subproblem}{%
    \begin{enumerate}
        \let\my@olditem\item
        \let\my@closepage\relax
        \newcommand{\Item}{%
            \my@closepage\my@olditem\minipage[t]{\linewidth}%
            \let\my@closepage\endminipage%
        }
        \renewcommand{\ii}{\Item}
        \renewcommand{\itemsep}{.5ex}
        \renewcommand{\labelenumi}{\textbf{\alph{enumi})\;}}%
}{\my@closepage\end{enumerate}}

